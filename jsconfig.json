{
    "exclude": ["node_modules"],
    "compilerOptions": {
        "module": "Node16",
        "baseUrl": "./",
        "paths": {
            "#config/*": ["./src/config/*"],
            "#constants/*": ["./src/constants/*"],
            "#controllers/*": ["./src/controllers/*"],
            "#db/*": ["./src/db/*"],
            "#dtos/*": ["./src/dtos/*"],
            "#lib/*": ["./src/lib/*"],
            "#repositories/*": ["./src/repositories/*"],
            "#routes/*": ["./src/routes/*"],
            "#schemas/*": ["./src/schemas/*"],
            "#services/*": ["./src/services/*"],
            "#utils/*": ["./src/utils/*"]
        }
    }
}
